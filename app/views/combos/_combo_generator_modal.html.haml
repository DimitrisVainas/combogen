#combo-generator-wrapper
  .modal-title
    %h2 Create your combo
  .modal-body
    #generator-controls.clearfix
      Add
      = number_field_tag :no_tricks, 1, in: 1..10
      tricks from
      #trick-list
        = select_tag "filter", options_for_select({ "The Database" => "database", "My Trick List" => "list" }, "list")
      %a.btn.btn-primary#add
        Add
    #generated-combos
      .combo.clearfix
        .combo-input-wrapper
          %label{ for: 'combo-input'} Tricks:
          %input{type: 'text', id: 'combo-input', value: combo_input_value(@combo)}
    #generator-actions.clearfix
      %a.btn.btn-success#save-combo
        Save
      %a.btn.btn-warning#discard
        Discard
  .modal-data
    #my-tricks
      = @my_tricks
    #db-tricks
      = @database_tricks