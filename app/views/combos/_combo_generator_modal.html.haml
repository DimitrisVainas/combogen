#combo-generator-wrapper
  .modal-title
    %h2 Create your combo
  .modal-body
    #generator-controls.clearfix
      = number_field_tag :no_tricks, 2, in: 1..10, class: 'form-control'
      %span.copy tricks from
      #trick-list
        = select_tag "filter", options_for_select(available_styles_options, "list"), {class: 'form-control'}
      %a.btn.btn-primary#add
        Add
    #generated-combos
      .combo.clearfix
        .combo-input-wrapper
          %label{ for: 'combo-input'}
          %input{type: 'text', id: 'combo-input', value: combo_input_value(@combo)}
            %option{value:''} Type your combo...
    #generator-actions.clearfix
      %a.btn.btn-primary#save-combo
        Save
      %a.btn.btn-default#discard
        Discard
  .modal-data
    %script#my-tricks{type: "text/json"}
      = my_tricks_for_selectize.html_safe
    %script#db-tricks{type: "text/json"}
      = db_tricks_for_selectize.html_safe
