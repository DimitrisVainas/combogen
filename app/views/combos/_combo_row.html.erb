<div class="combo-row container">
  <div>
    <a href="/combos/<%= @combo.id.to_s %>">
      <ul class="combo-sequence">
        <% @tricks = @tricks_names[@index] if !@tricks_names[@index].nil? %>
        <%- @tricks.each do |trick| %>
          <li><%= trick %></li>
        <%-end-%>
      </ul>
    </a>
    <span class="combo-actions pull-right">
      <%= link_to "", edit_combo_path(@combo), :class => "fa fa-cog mr5" %>
      <%= link_to "", @combo, method: :delete, data: { confirm: 'Are you sure?' }, :class => "fa fa-trash-o" %>
    </span>
  </div>
  <div class="clearfix"></div>
  <div>
    <span class="combo-details">
      by <%= link_to @combo.tricker.name, "#" %> Â·
      <%= time_ago_in_words(@combo.created_at) %> ago
      <span class="pull-right"><%= @combo.no_tricks %>-trick combo</span>
    </span>
  </div>
</div>