<div class="container">
  <%= link_to '← My Combos', combos_path, :class => "btn btn-camouflaged mrs" %>
  <%= link_to 'View Combo', @combo, :class => "btn btn-camouflaged mrs" %>
  <%= link_to 'Destroy', @combo, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-camouflaged mrs" %>
</div>
<div class="container container-tiny tac">
  <h1>Editing Combo #<%= @combo.id%></h1>
  <%= render 'shared/flash_messages' %>
</div>
<div id="combo-form" class="container container-tiny card mb20">
  <%= render 'form_edit' %>
</div>