<p id="notice"><%= notice %></p>

<div id="sidebar" class="col-sm-3">
  <div class="container">
    <section>
      <h2>My Combos</h2>
    </section>
    <section>
      <%= render 'index_lists' %>
    </section>
    <section>
      <%= render 'index_actions' %>
    </section>
  </div>
</div>

<div class="col-sm-9">
  <!-- Print all combos from the current tricker -->
  <div class="combo-list container">
    <div class="combo-list-head clearfix">
      <div class="col-xs-1">Id</div>
      <div class="col-sm-8">Sequence</div>
    </div>
    <% if !@combos.empty? %>
      <% @index = 0 %>
      <% @combos.each do |combo| %>
        <% @combo = combo %>
        <%= render 'combo_row' %>
        <% @index += 1 %>
      <% end %>
    <% else %>
      <div class="combo-row">
        <div class="col-xs-1">
        </div>
        <div class="col-sm-8">
          There are currently no combos in this list.
        </div>
        <div class="col-sm-3">
        </div>
        <div class="clearfix"></div>
      </div>
    <% end %>
  </div>
</div>
