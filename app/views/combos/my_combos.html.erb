<div class="container">
  <div id="combos-affix" class="col-sm-4 col-md-3">
    <div> <!--data-spy="affix" data-offset-top="60" data-offset-bottom="300"-->
      <h2 id="toolbar-title" class="bb2">My Combos</h2>
      <div class="mb20">
        <%= render 'combo_lists' %>
      </div>
      <div class="container mb20">
        <a class="btn btn-camouflaged" data-toggle="modal" data-target="#new-combo-modal">
          <i class="fa fa-plus"></i> New Combo
        </a>
        <a class="btn btn-camouflaged" data-toggle="modal" data-target="#combo-generator-modal">
          <i class="glyphicon glyphicon-cog"></i> Combo Generator
        </a>
      </div>
    </div>
  </div>

  <div class="col-sm-8 col-md-9">
    <%= render 'shared/flash_messages' %>
    <!-- Print all combos from the current tricker -->
    <%= paginate @combos %>
    <div class="list container">
      <% if !@combos.empty? %>
        <% @combos.each do |combo| %>
          <%= render partial: 'combo_row', locals: {combo: combo} %>
        <% end %>
      <% else %>
        <div class="list-row">
          <div class="container empty-list-head">
            <h3>There are currently no combos in this list.</h3>
          </div>
        </div>
      <% end %>
    </div>
    <%= paginate @combos %>
  </div>  
</div>

<%= render 'combo_generator_modal' %>
<%= render 'new_combo_modal' %>
<%= render 'watch_combo_modal' %>