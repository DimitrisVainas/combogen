#combos-wrapper.container
  .section-header.clearfix
    .col-sm-12
      %a.section-link{href: my_combos_path}
        %h2
          %i.glyphicon.glyphicon-book.section-icon
          %span My Combos
  = render 'shared/toastr_flash_messages'
  .content-header.clearfix
    .col-sm-6
      = select_tag 'combo-lists-dropdown', options_for_select([["All of them", nil]]) + options_from_collection_for_select(current_tricker.lists, "id", "to_s"), { class: 'form-control'}
    .col-sm-6
      %a.btn.btn-primary.btn-block.pull-right#create-combo
        Create Combo
  #combos-list.clearfix
    = render partial: 'combos_list', locals: {empty_message: 'There are currently no combos in this list.'}
= render 'watch_combo_modal'
