<div class="modal fade" id="sign-up-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h1 class="modal-title">Tricker Registration</h1>
        <p>
          Soon you'll be a part of our awesome community!
        </p>
      </div>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <div class="modal-body tac">
          <div id="error_explanation" class="mb20">
              <%= devise_error_messages! %>
          </div>
        
          <div class="mb20"><%= f.label :name %><br />
          <%= f.text_field :name, :autofocus => true %></div>

          <div class="mb20"><%= f.label :email %><br />
          <%= f.text_field :email %></div>

          <div class="mb20"><%= f.label :password %><br />
          <%= f.password_field :password %></div>

          <div class="mb20"><%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation %></div>

          <!-- <div class="mb20"><%= f.label :sampler %><br />
          <%= f.text_field :sampler %></div>

          <div class="mb20"><%= f.label :youtube %><br />
          <%= f.text_field :youtube %></div>

          <div class="mb20"><%= f.label :facebook %><br />
          <%= f.text_field :facebook %></div>
          -->
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit "Create my account", :class => "btn btn-primary" %>
        </div>
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->