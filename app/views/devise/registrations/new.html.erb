<div id="title" class="container">
	<h1>Tricker Registration</h1>
	<p>
		Soon you'll be a part of our awesome community!
	</p>
</div>

<div id="actions-top" class="container">
	<%= render "devise/shared/links" %>
</div>

<div class="container">
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	    <div id="error_explanation" class="mbl">
	      	<%= devise_error_messages! %>
	    </div>
	  
	  <div class="mbl"><%= f.label :name %><br />
	  <%= f.text_field :name, :autofocus => true %></div>

	  <div class="mbl"><%= f.label :email %><br />
	  <%= f.text_field :email %></div>

	  <div class="mbl"><%= f.label :password %><br />
	  <%= f.password_field :password %></div>

	  <div class="mbl"><%= f.label :password_confirmation %><br />
	  <%= f.password_field :password_confirmation %></div>

	  <!-- <div class="mbl"><%= f.label :sampler %><br />
	  <%= f.text_field :sampler %></div>

	  <div class="mbl"><%= f.label :youtube %><br />
	  <%= f.text_field :youtube %></div>

	  <div class="mbl"><%= f.label :facebook %><br />
	  <%= f.text_field :facebook %></div>
 -->
	  <div class="mbl"><%= f.submit "Create my account", :class => "btn btn-blue" %></div>
	<% end %>
</div>

<br class="clear">
