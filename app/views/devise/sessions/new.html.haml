#tricker-sign-in
  .logo.container
    %img{src:"http://tricking.gr/images/logo2-.png"}
  .container
    %h3 Sign in with your Level App account
  #sign-in-inputs
    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      = f.email_field :email, :autofocus => true, :placeholder => "Email", :class => "form-control"
      = f.password_field :password, :placeholder => "Password", :class => "form-control"
      = f.submit "Show me the combos", :class => "btn btn-primary btn-block", :id => "sign-in-btn"
      /- if devise_mapping.rememberable?
      / = f.check_box :remember_me
      / = f.label :remember_me
    .devise-links
      = link_to "Forgot your password?", new_password_path(resource_name)
  .links
    = link_to "Create an account", new_tricker_registration_path
