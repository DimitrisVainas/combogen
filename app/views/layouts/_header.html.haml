%header
  %nav#navigation.navbar.navbar-inverse{:role => "navigation"}
    .container
      .navbar-header
        %button.navbar-toggle{"data-target" => "#levelapp-nav", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        <a href=#{root_path} class="navbar-brand">
        %i.fa.fa-level-up
        Level App
      #levelapp-nav.collapse.navbar-collapse
        %ul.nav.navbar-nav.navbar-right
          - if tricker_signed_in?
            %li= link_to "Home", root_path
            %li= link_to "Tricktionary", tricks_path
            %li= link_to "My Combos", my_combos_path
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                %i.fa.fa-user.fa-fw
                = current_tricker.name
                %b.caret
              %ul.dropdown-menu
                %li= link_to "My Profile", current_tricker
                %li= link_to "My Trick List", current_tricker.tricking_style
                %li.divider
                %li= link_to "Account Settings", edit_tricker_registration_path
                %li.divider
                %li= link_to 'Logout', destroy_tricker_session_path, :method => :delete
          - else
            %li
              = link_to 'Register', new_tricker_registration_path
            %li
              #navbar-btn
                = link_to 'Login', new_tricker_session_path, :class => "btn btn-success navbar-btn"
