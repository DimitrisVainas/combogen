<div class="container mb20">
  
</div>
<div class="container container-mini mb20">
  <h1>
    <%= @tricking_style.name %>
    <% if current_tricker_can_edit_style %>
      <%= link_to ' Edit', edit_tricking_style_path(@tricking_style), :class => "fa fa-pencil btn btn-camouflaged mr10" %>
    <% end %>
  </h1>
  <small>
    by <%= link_to @tricking_style.tricker.name, "#" %>
  </small>
  <%= render 'shared/flash_messages' %>
</div>
<div class="container container-mini card mb20">
  <h2>Description</h2>
  <p><%= @tricking_style.description %></p>
</div>
<div class="container container-mini card mb20">
  <h2>Tricks</h2>
  <ul class="trick-list">
    <% @tricking_style.tricks.order(:name).each do |t| %>
      <li><%= t.name %></li>
    <% end %>
  </ul>
</div>
