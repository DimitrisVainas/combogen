<div class="container">
  <%= semantic_form_for(@trick) do |f| %>
    <% if @trick.errors.any? %>
      <div id="error_explanation" class="mbl">
        <h3>
          <%= pluralize(@trick.errors.count, "error") %> prevented this trick from being saved.
          Please review your inputs below.
        </h3>
      </div>
    <% end %>

    <%= f.inputs do %>
      <%= f.input :name %>
      <%= f.input :difficulty %>
      <%= f.input :setup %>
    <% end %>
    <%= f.actions do %>
      <%= f.action :submit, :button_html => { :class => "btn btn-blue" } %>
    <% end %>
  <% end %>
</div>