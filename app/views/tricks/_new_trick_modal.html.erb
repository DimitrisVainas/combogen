<div class="modal fade" id="new-trick-modal" tabindex="-1" role="dialog" aria-labelledby="new-trick-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3 class="modal-title" id="new-trick-label">
          New trick
        </h3>
      </div>
      <%= semantic_form_for(@trick) do |f| %>
        <div id="trick-form" class="modal-body">
          <% if @trick.errors.any? %>
            <div id="error_explanation" class="mbl">
              <%= pluralize(@trick.errors.count, "error") %> prevented this trick from being saved.
              Please review your inputs below.
            </div>
          <% end %>

          <%= f.inputs do %>
            <%= f.input :name %>
            <%= f.input :difficulty %>
            <%= f.input :trick_type, :as => :select, :collection => @trick_types, :include_blank => "N/A" %>
          <% end %>
        </div>
        <div class="modal-footer">
          <%= f.actions do %>
            <%= f.action :submit, :button_html => { :class => "btn btn-base" } %>
          <% end %>
        </div>
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->