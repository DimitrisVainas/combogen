.list-row.clearfix
  .trick-name.col-sm-4.col-xs-7
    %b= link_to @trick.name, @trick, :class => "main-link"
  .col-sm-2.col-xs-4.hidden-xs
    Class #{@trick.difficulty}
  .col-sm-2.col-xs-4.hidden-xs
    #{@trick.trick_type}
  .col-sm-2.col-xs-4.hidden-xs
    %b.combos-count= @trick.combos.uniq.count
    %small= 'combo'.pluralize(@trick.combos.uniq.count)
  .col-xs-5.col-sm-2
    - if current_tricker_can_edit_trick(@trick)
      .actions.pull-right
        = link_to edit_trick_path(@trick), :class => "btn btn-xs btn-default" do
          %i.glyphicon.glyphicon-cog
        = link_to @trick, method: :delete, :class => "btn btn-default btn-xs",data: { confirm: 'Destroying a trick will also remove it from all combos. The ones left with less than two tricks will be destroyed as well. Are you sure you want to continue?'} do
          %i.glyphicon.glyphicon-trash
          %span Destroy
