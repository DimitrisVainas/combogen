#edit-trick-wrapper.container
  .section-header.clearfix
    .col-sm-12
      = link_to 'Tricktionary', tricks_path
      \/
      = link_to @trick.name, @trick
      \/
      %h2
        Edit
      = link_to @trick, method: :delete, :class => "btn btn-default btn-sm pull-right",data: { confirm: 'Destroying a trick will also remove it from all combos. The ones left with less than two tricks will be destroyed as well. Are you sure you want to continue?'} do
        %i.glyphicon.glyphicon-trash
        %span Destroy
  #trick-form.container
    = render 'form'
