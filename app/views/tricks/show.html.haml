#tricktionary-entry-wrapper.container
  .section-header.clearfix
    .col-sm-4
      =link_to 'Tricktionary', tricks_path
      \/
      %h2= @trick.name
    .col-sm-4.pull-right
      - if current_tricker_can_edit_trick
        = link_to ' Edit', edit_trick_path(@trick), :class => "fa fa-pencil btn btn-default btn-sm"
        = link_to ' Destroy', @trick, method: :delete, :class => "fa fa-trash-o btn btn-default btn-sm",data: { confirm: 'Destroying a trick will also remove it from all combos. The ones left with less than two tricks will be destroyed as well. Are you sure you want to continue?'}
  #trick-details.clearfix
    .col-md-6
      Class #{@trick.difficulty} · #{@trick.trick_type}, Type, Takeoff, Landing, Short Description
    .col-md-6
      - if @trick.tutorials.any?
        - tutorial = @trick.tutorials.first
        %iframe{width:'100%', height:'315', scrolling: "no", allowtransparency: "true", allowfullscreen: "true", src: "http://www.youtube.com/embed/#{tutorial.uid}?autoplay=0&rel=0&wmode=transparent&showinfo=0&start=#{tutorial.start_time}&end=#{tutorial.end_time}", frameborder:'0'}
  #combos-using-trick.clearfix
    - if @trick.combos.empty?
      %h3
        We found no combos with #{@trick.name} in Level App. That's really sad...
      = link_to 'Be the first to create one!', new_combo_path, :class => "btn btn-primary"
    - else
      - unless @combos_you_can_do.empty?
        .col-md-6
          %h3.list-head Combos you can do
          .list
            - @combos_you_can_do.each do |combo|
              = render partial: 'combos/combo_row', locals: {combo: combo}
          / %= link_to "See all ("+@combos_you_can_do.count.to_s+") →", "#", :class=> "btn btn-camouflaged btn-sm mt10" %
      - unless @related_combos.empty?
        .col-md-6
          %h3.list-head Related combos
          .list
            - @related_combos.each do |combo|
              = render partial: 'combos/combo_row', locals: {combo: combo}
          / %= link_to "See all ("+@trick.combos.uniq.length.to_s+") →", "#", :class=> "btn btn-camouflaged btn-sm mt10" %

= render 'combos/watch_combo_modal'
