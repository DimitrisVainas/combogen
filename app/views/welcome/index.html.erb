<div id="title" class="container tac">
	<h1>Tricking.GR's Level App</h1>
  <ul id="title-details">
    <li><%= Tricker.all.length %> trickers</li>
    <li><%= Trick.all.length %> tricks</li>
    <li><%= Combo.all.length %> combos</li>
  </ul>
</div>
